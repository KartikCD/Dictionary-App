<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="10sp"
    android:layout_marginBottom="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/grammer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8sp"
            android:padding="5sp"
            android:text="NOUN"
            android:textAllCaps="true"
            android:textColor="@color/grammer"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/meaning_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grammer_text"
            android:layout_marginHorizontal="8sp"
            android:justificationMode="inter_word"
            android:padding="5sp"
            android:text="orm one's features into a pleased, kind, or amused expression, typically with the corners of the mouth turned up and the front teeth exposed."
            android:textAllCaps="false"
            android:textColor="@color/meaning"
            android:textSize="17sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/synonym_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8sp"
            android:layout_marginTop="4sp"
            android:padding="5sp"
            android:text="Synonyms"
            android:textAllCaps="false"
            android:layout_below="@id/meaning_text"
            android:textColor="@color/grammer"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/synonymword_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/synonym_text"
            android:layout_marginHorizontal="8sp"
            android:justificationMode="inter_word"
            android:padding="5sp"
            android:text="\u25CF grin\n\u25CF beam \n\u25CF grin like a Cheshire cat \n\u25CF grin from ear to ear \n\u25CF twinkle"
            android:textAllCaps="false"
            android:textColor="@color/meaning"
            android:textSize="17sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/example_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8sp"
            android:layout_marginTop="4sp"
            android:padding="5sp"
            android:text="Example"
            android:textAllCaps="false"
            android:layout_below="@id/synonymword_text"
            android:textColor="@color/grammer"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/exampleword_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/example_text"
            android:layout_marginHorizontal="8sp"
            android:justificationMode="inter_word"
            android:padding="5sp"
            android:text="she was smiling"
            android:textAllCaps="false"
            android:textColor="@color/meaning"
            android:textSize="17sp"
            android:textStyle="normal" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>